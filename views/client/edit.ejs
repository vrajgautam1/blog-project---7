<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit Blog</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css">

  <link rel="stylesheet" href="/createEdit.css">
</head>

<body>

  <div class="container">
    <!-- Navbar -->
    <%- include("./partials/navBar.ejs") %>

    <main>
      <h2 class="text-center text-dark mb-4">Create a New Blog</h2>

      <form action="" method="post" enctype="multipart/form-data" action="/editBlog/<%= blogToEdit._id %>">
        <div class="mb-3">
          <label for="title" class="form-label">Blog Title</label>
          <input type="text" class="form-control" name="title" id="title" required value="<%= blogToEdit.title %>">
        </div>

        <div class="mb-3">
          <label for="author" class="form-label">Blog Author</label>
          <input type="text" class="form-control" id="author" name="author" required value="<%= blogToEdit.author %>">
        </div>

        <div class="mb-3">
          <label for="coverImage" class="form-label">Add Blog Cover</label>
          <input type="file" class="form-control" id="coverImage" name="coverImage" required value="">
        </div>

        <p>Current image: <%= blogToEdit.coverImage %></p>

        <div class="mb-3">
          <label for="description" class="form-label">Blog Description</label>
          <textarea class="form-control" placeholder="Add blog description" id="description" name="description" rows="4" required><%= blogToEdit.description %></textarea>
        </div>

        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>
    </main>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
