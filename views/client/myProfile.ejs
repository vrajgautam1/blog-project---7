<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Profil Tasarımı</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/myprofile.css">

</head>

<body class="container">

    <%- include('./partials/navBar.ejs') %>

        <div class="profile-container">
            <!-- Kapak Resmi -->
            <div class="cover-photo">
                <img id="coverImage" src="https://placehold.co/800x300" alt="Kapak Resmi">
                <div class="edit-cover" onclick="openCoverEditor()">✎ Kapak Resmini Değiştir</div>
            </div>

            <!-- Profil Resmi -->
            <div class="profile-picture">
                <img id="profileImage" src="https://placehold.co/150x150" alt="Profil Fotoğrafı">
                <div class="edit-profile" onclick="openProfileEditor()">✎</div>
            </div>

            <!-- Profil Bilgileri -->
            <div class="profile-info">
                <h1 id="username">Hamdullah Admin</h1>
                <p id="bio">Frontend Developer | React & Vue.js | İstanbul</p>
                <button onclick="openEditForm()" style="margin-top: 15px;">Profili Düzenle</button>
            </div>

            <!-- Düzenleme Formu -->
            <div class="edit-form" id="editForm">
                <input type="text" id="editUsername" placeholder="Adınızı girin">
                <textarea id="editBio" placeholder="Hakkınızda bir şeyler yazın..." rows="3"></textarea>
                <button onclick="saveProfile()">Kaydet</button>
            </div>
        </div>

        <%- include('./partials/footer.ejs') %>
</body>

</html>